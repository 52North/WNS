<WNSConfig xmlns="http://www.52north.org/wns" xmlns:wns="http://www.opengis.net/wns/0.0"
	xmlns:ows="http://www.opengis.net/ows" xmlns:xlink="http://www.w3.org/1999/xlink"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.52north.org/wns ../../xml/xsd/wnsConfigFiles.xsd">
	<ServiceProperties>
		<MaxTTLOfMessages>@ttl@</MaxTTLOfMessages>
		<ExceptionLevel>@exceptionlevel@</ExceptionLevel>
		<WNSURL>@url@/@webappname@/wns</WNSURL>
		<WNSSchemaLocation>http://www.opengis.net/wns/0.0
			http://schemas.opengis.net/wns/0.0.0/wnsAll.xsd</WNSSchemaLocation>
		<OWSSchemaLocation>http://www.opengis.net/ows
			http://schemas.opengis.net/ows/1.0.0/owsExceptionReport.xsd</OWSSchemaLocation>
		<DAOFactoryDriver>org.n52.wns.db.ExistDatabaseDAOFactory</DAOFactoryDriver>
		<!-- Take care of the "/", don´t use "\" -->
		<!--If you use the eXist database DAO a property file is not needed!-->
		<DAOFactoryPropertiesLocation>@daofactory@</DAOFactoryPropertiesLocation>
		<CapabilitiesBaseInformation version="0.0.0">
			<ows:ServiceIdentification>
				<ows:Title>52north WNS</ows:Title>
				<ows:Abstract>WNS for sending messages via various protocols.</ows:Abstract>
				<ows:Keywords>
					<ows:Keyword>WNS</ows:Keyword>
					<ows:Keyword>messaging</ows:Keyword>
					<ows:Keyword>protocol independent</ows:Keyword>
				</ows:Keywords>
				<ows:ServiceType codeSpace="http://opengeospatial.net">OGC:WNS</ows:ServiceType>
				<ows:ServiceTypeVersion>0.0.0</ows:ServiceTypeVersion>
				<ows:Fees>NONE</ows:Fees>
				<ows:AccessConstraints>NONE</ows:AccessConstraints>
			</ows:ServiceIdentification>
			<ows:ServiceProvider>
				<ows:ProviderName>Institute for Geoinformatics, University of Muenster</ows:ProviderName>
				<ows:ProviderSite xlink:href="http://ifgi.uni-muenster.de"/>
				<ows:ServiceContact>
					<ows:IndividualName>Your Name</ows:IndividualName>
					<ows:PositionName/>
					<ows:ContactInfo>
						<ows:Phone>
							<ows:Voice/>
							<ows:Facsimile/>
						</ows:Phone>
						<ows:Address>
							<ows:DeliveryPoint/>
							<ows:City/>
							<ows:AdministrativeArea/>
							<ows:PostalCode/>
							<ows:Country/>
							<ows:ElectronicMailAddress/>
						</ows:Address>
					</ows:ContactInfo>
				</ows:ServiceContact>
			</ows:ServiceProvider>
			<ows:OperationsMetadata>
				<ows:Operation name="GetCapabilities">
					<ows:DCP>
						<ows:HTTP>
							<ows:Get xlink:href="http://localhost:8080/52nWNS/wns?"/>
							<ows:Post xlink:href="http://localhost:8080/52nWNS/wns"/>
						</ows:HTTP>
					</ows:DCP>
					<ows:Parameter name="service">
						<ows:Value>WNS</ows:Value>
					</ows:Parameter>
					<ows:Parameter name="Sections">
						<ows:Value>All</ows:Value>
						<ows:Value>ServiceIdentification</ows:Value>
						<ows:Value>ServiceProvider</ows:Value>
						<ows:Value>OperationsMetadata</ows:Value>
						<ows:Value>Contents</ows:Value>
					</ows:Parameter>
				</ows:Operation>
				<ows:Operation name="Register">
					<ows:DCP>
						<ows:HTTP>
							<ows:Post xlink:href="http://localhost:8080/52nWNS/wns"/>
						</ows:HTTP>
					</ows:DCP>
					<ows:Parameter name="service">
						<ows:Value>WNS</ows:Value>
					</ows:Parameter>
					<ows:Parameter name="version">
						<ows:Value>1.0.0</ows:Value>
					</ows:Parameter>
				</ows:Operation>
				<ows:Operation name="Unregister">
					<ows:DCP>
						<ows:HTTP>
							<ows:Post xlink:href="http://localhost:8080/52nWNS/wns"/>
						</ows:HTTP>
					</ows:DCP>
					<ows:Parameter name="service">
						<ows:Value>WNS</ows:Value>
					</ows:Parameter>
					<ows:Parameter name="version">
						<ows:Value>1.0.0</ows:Value>
					</ows:Parameter>
				</ows:Operation>
				<ows:Operation name="UpdateSingleUserRegistration">
					<ows:DCP>
						<ows:HTTP>
							<ows:Post xlink:href="http://localhost:8080/52nWNS/wns"/>
						</ows:HTTP>
					</ows:DCP>
					<ows:Parameter name="service">
						<ows:Value>WNS</ows:Value>
					</ows:Parameter>
					<ows:Parameter name="version">
						<ows:Value>1.0.0</ows:Value>
					</ows:Parameter>
				</ows:Operation>
				<ows:Operation name="UpdateMultiUserRegistration">
					<ows:DCP>
						<ows:HTTP>
							<ows:Post xlink:href="http://localhost:8080/52nWNS/wns"/>
						</ows:HTTP>
					</ows:DCP>
					<ows:Parameter name="service">
						<ows:Value>WNS</ows:Value>
					</ows:Parameter>
					<ows:Parameter name="version">
						<ows:Value>1.0.0</ows:Value>
					</ows:Parameter>
				</ows:Operation>
				<ows:Operation name="GetMessage">
					<ows:DCP>
						<ows:HTTP>
							<ows:Post xlink:href="http://localhost:8080/52nWNS/wns"/>
						</ows:HTTP>
					</ows:DCP>
					<ows:Parameter name="service">
						<ows:Value>WNS</ows:Value>
					</ows:Parameter>
					<ows:Parameter name="version">
						<ows:Value>1.0.0</ows:Value>
					</ows:Parameter>
				</ows:Operation>
				<ows:Operation name="DoNotification">
					<ows:DCP>
						<ows:HTTP>
							<ows:Post xlink:href="http://localhost:8080/52nWNS/wns"/>
						</ows:HTTP>
					</ows:DCP>
					<ows:Parameter name="service">
						<ows:Value>WNS</ows:Value>
					</ows:Parameter>
					<ows:Parameter name="version">
						<ows:Value>1.0.0</ows:Value>
					</ows:Parameter>
				</ows:Operation>
			</ows:OperationsMetadata>
		</CapabilitiesBaseInformation>
		<DataBaseProperties>
			<DBName>@dbname@</DBName>
			<user>@dbusername@</user>
			<password>@dbpassword@</password>
			<URL>@dburl@</URL>
			<checkDBDuration>@dbduration@</checkDBDuration>
		</DataBaseProperties>
		<WSDLDocumentPath>webapps/@webappname@/WEB-INF/conf/wns.wsdl</WSDLDocumentPath>
	</ServiceProperties>
	<RegisteredHandlers>
		<!--The settings for the smtp account to send emails-->
		<EMailHandler>			
			<SMTP>
				<Host>mail.foo.de</Host>
				<User>username</User>
				<Passwd>password</Passwd>
				<Sender>username@foo.de</Sender>
				<Authenticate>true</Authenticate>
				<Port>25</Port>
				<EmailSubject>52n Web Notification Service</EmailSubject>
				<SSL>false</SSL>
				<TLS>true</TLS>
			</SMTP>
		</EMailHandler>
		<!--The settings for the XMPP account -->
		<XMPPHandler>			
			<Provider>org.n52.wns.xmpp.XMPPHandlerJabber</Provider>
			<User>xmppjabbername</User>
			<Passwd>xmppjabberpassword</Passwd>
			<Host>jabber.org</Host>
			<Port>5222</Port>
		</XMPPHandler>
		<!--The settings to send SMS-->
		<SMSHandler>			
			<Provider>org.n52.wns.sms.SMSHandlerEcall</Provider>
			<User>SMSUser</User>
			<Passwd>SMSpwd</Passwd>
			<Host>msg.ecall.ch</Host>
		</SMSHandler>
		<!--The setting for the phone handler, the user name will be concat with the host, user@host-->
		<PhoneHandler>			
			<Provider>org.n52.wns.communication.PhoneHandlerEcall</Provider>
			<User>PhoneUser</User>
			<Passwd>Phonepwd</Passwd>
			<Host>voice.ecall.ch</Host>
		</PhoneHandler>
		<!--The setting for the fax handler, the user name will be concat with the host, user@host-->
		<FaxHandler>			
			<Provider>org.n52.wns.communication.FaxHandlerEcall</Provider>
			<User>FaxUser</User>
			<Passwd>FaxPwd</Passwd>
			<Host>fax.ecall.ch</Host>
		</FaxHandler>
	</RegisteredHandlers>
</WNSConfig>
